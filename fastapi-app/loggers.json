{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "standard"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "log/app.log",
            "level": "INFO",
            "formatter": "standard",
            "maxBytes": 10485760,
            "backupCount": 20
        }
    },
    "loggers": {
        "app": {
            "level": "DEBUG",
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false
        }
    },
    "root": {
        "level": "WARNING",
        "handlers": [
            "console"
        ]
    }
}